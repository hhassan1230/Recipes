<h2>Edit Profile</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, input_html: { class: 'form-control' }, required: true, autofocus: true, :placeholder => "Your name Here" %><br />
    <%= f.input :about, input_html: { class: 'form-control' }, required: true, autofocus: true, :placeholder => "About you"  %><br />
    <%= f.input :email, input_html: { class: 'form-control' }, required: true, autofocus: true, :placeholder => " Your email here" %><br />

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, :placeholder => "********"%><br />
    <%= f.input :change_password, autocomplete: "off", hint: " leave it blank if you don't want to change it", required: false, :placeholder => "********" %><br />
    <%= f.input :changed_password_confirmation , required: false, :placeholder => "********" %>
  </div><br />

  <div class="form-actions">
    <%= f.submit "Update", :class => "buttonx"%>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
